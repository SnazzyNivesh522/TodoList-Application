      "express": "^4.21.1",
      "jsonwebtoken": "^9.0.2",
      "mongoose": "^8.7.2",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "react-icons": "^5.3.0",
      "react-router-dom": "^6.27.0"
    },
    "devDependencies": {
      "@eslint/js": "^9.11.1",
      "@types/react": "^18.3.10",
      "@types/react-dom": "^18.3.0",
      "@vitejs/plugin-react": "^4.3.2",
      "concurrently": "^8.0.1",
      "eslint": "^9.11.1",
      "eslint-plugin-react": "^7.37.0",
